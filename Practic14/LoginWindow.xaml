<Window x:Class="Practic14.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic14"
        mc:Ignorable="d"
        Title="Авторизация" Height="197" Width="328" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Label Content="Введите пароль:" Margin="0,22,0,0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <PasswordBox x:Name="password"  VerticalAlignment="Top" Height="30" Width="250" Margin="32,64,32,0" HorizontalContentAlignment="Center" Padding="0, 4, 0, 0" Password="" />
        <Button x:Name="enter" Content="Вход" Height="30" Width="250" Margin="32,111,32,0" VerticalAlignment="Top" FontWeight="Bold" Click="enter_Click"/>

    </Grid>
</Window>